<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="CheckInBundle\Entity\CheckIn" table="check_in">
    <indexes>
      <index name="fk_check_in_vehicle1_idx" columns="vehicle"/>
      <index name="fk_check_in_user1_idx" columns="creator"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="lat" type="float" column="latitude" nullable="false"/>
    <field name="long" type="float" column="longitude" nullable="false"/>
    <field name="timestamp" type="datetime" column="timestamp" nullable="false"/>
    <field name="description" type="text" column="description" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="creator" target-entity="CoreBundle\Entity\User" fetch="LAZY">
      <join-columns>
        <join-column name="creator" referenced-column-name="username"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="vehicle" target-entity="VehicleBundle\Entity\Vehicle" fetch="LAZY">
      <join-columns>
        <join-column name="vehicle" referenced-column-name="license_plate_no"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
