<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="CoreBundle\Entity\MiscCost" table="misc_cost">
    <indexes>
      <index name="fk_misc_cost_vehicle1_idx" columns="vehicle"/>
      <index name="fk_misc_cost_user1_idx" columns="creator"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="type" type="string" column="type" length="48" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="value" type="decimal" column="value" precision="6" scale="2" nullable="false"/>
    <field name="timestamp" type="datetime" column="timestamp" nullable="false">
      <options>
        <option name="default">CURRENT_TIMESTAMP</option>
      </options>
    </field>
    <many-to-one field="vehicle" target-entity="Vehicle" fetch="LAZY">
      <join-columns>
        <join-column name="vehicle" referenced-column-name="license_plate_no"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="creator" target-entity="User" fetch="LAZY">
      <join-columns>
        <join-column name="creator" referenced-column-name="username"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
