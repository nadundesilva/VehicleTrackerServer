<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="CoreBundle\Entity\Vehicle" table="vehicle">
    <indexes>
      <index name="fk_vehicle_user1_idx" columns="owner"/>
    </indexes>
    <id name="licensePlateNo" type="string" column="license_plate_no" length="10">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="64" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="text" column="description" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="fuelOne" type="string" column="fuel_one" length="48" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="fuelTwo" type="string" column="fuel_two" length="48" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="make" type="string" column="make" length="48" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="model" type="string" column="model" length="48" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="year" type="date" column="year" nullable="false"/>
    <many-to-one field="owner" target-entity="User" fetch="LAZY">
      <join-columns>
        <join-column name="owner" referenced-column-name="username"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="user" target-entity="User" inversed-by="vehicle" fetch="LAZY">
      <join-table name="driver">
        <join-columns>
          <join-column name="vehicle" referenced-column-name="license_plate_no"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="user" referenced-column-name="username"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
